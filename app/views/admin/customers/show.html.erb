<div class="container">
  <div class="row justify-content-center my-3">
    <h3 class="border-bottom border-gray">
      <%= @customer.first_name %> <%= @customer.last_name %>さんの会員詳細
    </h3>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-6 offset-1">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.kana_first_name %>　<%= @customer.kana_last_name %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <% if @customer.customer_status == false %>
              <td><b class="text-success">有効</b></td>
            <% elsif %>
              <td><b class="text-secondary">退会</b></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row justify-content-center mb-3">
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-2"%>
    <%= link_to "注文履歴一覧を見る", admin_order_path(@customer.id), class: "btn btn-primary"%>
  </div>
</div>