<div class="container">
  <div class="row justify-content-center mt-3">
    <h3 class="border-bottom border-gray">
      <%= @customer.first_name%>　<%= @customer.last_name%>さんの会員情報編集
    </h3>
  </div>
  
  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
    <div class="row mt-2">
      <div class="mx-auto">
        <table>
          <tr>
            <td>会員ID</td>
            <td style="padding-bottom: 10px;"><%= @customer.id %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :first_name %></td>
            <td style="padding-bottom: 10px;"><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :kana_first_name %></td>
            <td style="padding-bottom: 10px;"><%= f.text_field :kana_last_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :postcode %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="2" style="padding-bottom: 10px;"><%= f.text_field :address, :size=>"50" %></td>
            <td style="padding-bottom: 10px;" colspan="3"></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :telephone_number %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td style="padding-bottom: 10px;">メールアドレス</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :email %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td style="padding-bottom: 10px; padding-right: 40px;">会員ステータス</td>
            <td style="padding-bottom: 10px;">
              <%= f.radio_button :customer_status, false, checked:false%>
              有効
              <%= f.radio_button :customer_status, true %>
              退会
            </td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
        </table>
      </div>
    </div>
    
    <div class="row justify-content-center mb-3">
      <%= f.submit '変更を保存',class: 'btn btn-success' %>
    </div>
  <% end %>
</div>