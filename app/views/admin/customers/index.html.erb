<div class="container">
  <div class="row justify-content-center mt-3 mb-3">
    <h3 class="border-bottom border-gray">会員一覧</h3>
  </div>

  <div class="row justify-content-lg-center">
    <table class="table table-hover table-bordered">
      <thead class="thead-light">
        <tr class>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td class="align-middle"><%= customer.id %></td>
          <td class="align-middle"><%= link_to customer.first_name + "　" + customer.last_name, admin_customer_path(customer.id) %></td>
          <td class="align-middle"><%= customer.email %></td>
          <td class="align-middle">
            <% if customer.customer_status == false %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-secondary">退会</b>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="pagination d-flex justify-content-center mb-4">
    <%= paginate @customers %>
  </div>
</div>