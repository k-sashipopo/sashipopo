<div class="container">
  <div class="row">
    <h4 class="p-3 mb-2 bg-light text-dark">商品詳細<h4>
  </div>

  <div class="row">
    <div class="col-md-4">
        <%= image_tag @item.image, size: '300x200' %>
    </div>

    <div class="col-md-8">
      <table class="table table-borderless">
        <tbody>
        <tr>
          <th>商品名<th>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <th>商品説明<th>
          <td><%= @item.intro %></td>
        </tr>

        <tr>
          <th>ジャンル<th>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <th>税込価格<br>（税抜価格）<th>
          <td><%= (@item.tax_free_price*1.1).floor.to_s(:delimited) %>(<%= (@item.tax_free_price).floor.to_s(:delimited) %>)円</td>
        </tr>

        <tr>
          <th>販売ステータス<th>
          <td>
            <% if @item.sale_status == false %>
              <%= '販売中' %>
            <% else %>
              <%= '販売停止中' %>
            <% end %>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-group row justify-content-center">
              <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
            </div>
          </td>
        </tr>

        </tbody>
      </table>

    </div>
  </div>
</div>