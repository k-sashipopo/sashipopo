<div class="container">
  <div class="row">
    <h4 class="p-3 mb-2 bg-light text-dark">商品一覧<h4>
  </div>

  <div class="row justify-content-end">
    <%= link_to new_admin_item_path do %>
      <i class="fas fa-plus-circle"></i>
    <% end %>
  </div>

   <div class="row">
    <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.tax_free_price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.sale_status == false %>
            <%= '販売中' %>
          <% else %>
            <%= '販売停止中' %>
          <% end %>
        </td>
      </tr>
    </tbody>
      <% end %>
    </table>
  <%#= paginate items %>
  </div>
</div>

