<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-2 text-center">
      ジャンル検索
      <!--%= render 'homes/genrebar' genres: @genres %-->
    </div>
    
    <div class="col-10">
      <div class="d-flex justify-content-center align-items-end mb-3">
          <h3 class="m-0 pr-1">商品一覧</h3><span>(全<%= @items.count %>件)</span>
      </div>
      
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="m-3">
          <%= link_to item_path(item) do %>
            <%= image_tag item.image, size:'200x150' %><br>
            <p><%= item.name %></p>
            <p>¥<%= (item.tax_free_price*1.1).floor.to_s(:delimited) %>(税込)</p>
          <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="pagination justify-content-center my-3">
        <!--%= paginate @items_page, theme: 'bootstrap-5', link_icons: true %-->
        <%= paginate @items_page %>
      </div>

    </div>
  </div>
</div>
