<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-2 text-center">
      ジャンル検索
      <!--%= render 'homes/genrebar' genres: @genres %-->
    </div>
    
    <div class="col-8">
      <div class="d-flex flex-wrap justify-content-center">
        <div class="my-3">
          <%= image_tag @item.image, size:'400x300' %>
          <p><%= @item.name %></p>
          <p><%= @item.intro %></p>
          <p>¥<%= (@item.tax_free_price*1.1).floor.to_s(:delimited) %>(税込)</p>
          
          <%= form_with model: @cart_item, url: cart_items_path, method: :post, class: 'align-items-end' do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.label :count, "個数選択" %>
            <%= f.select :count, *[1..10] %>
            <%= f.submit "カートに入れる", class: 'btn btn-outline-success mb-3 ml-3' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
