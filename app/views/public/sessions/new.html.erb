<br>
<div class="container">
  
<%= flash[:notice] %>
<h2>会員ログイン</h2>

<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<!--メールアドレス-->

<table>
  <tr>
  <th>メールアドレス</th>
  <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %></td>
  </tr>

  <tr>
  <th>パスワード</th>
  <td><%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %></td>
  </tr>
</table>
  

<!--記憶させますか？？？-->
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

<br>

<!--ログインボタン-->
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<br>

<%= link_to new_customer_registration_path, class:'btn btn-outline-success' do %>
会員登録はこちら
<% end %>

<br>
<br>
<%= link_to new_admin_session_path, class:'btn btn-outline-danger' do %>
管理者ログインはこちら
<% end %>


</div>

<br>