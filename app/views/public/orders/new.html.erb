<div class="container">
  <div class="row justify-content-center mt-3">
    <h4 class="border-bottom border-gray">注文情報入力</h4>
  </div>

  <div class="row my-3 offset-2">
    
      <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
      <div class="mb-2"><h5 class="mr-2">支払方法</h5>
        <%= f.radio_button :pay_option, "credit_card" %>
        <%= f.label :pay_option_credit_card, Order.pay_options_i18n[:credit_card] %><br>
        <%= f.radio_button :pay_option, "transfer" %>
        <%= f.label :pay_option_transfer, Order.pay_options_i18n[:transfer] %><br>
      </div>
        
    
      <div class="mb-2"><h5 class="mr-2">お届け先</h5>
        <%= f.radio_button :delivery_address, 0 %>
        <%= f.label :shipping_addresses_customer_id, "ご自身の住所" %><br>
        <%= '〒' + current_customer.postcode + ' ' + current_customer.address %><br>
        <%= current_customer.family_name + current_customer.first_name %>
        
        <%= f.radio_button :delivery_address, 1 %>
        <%= f.label :options_from_collection_for_select, "ご登録済住所から選択" %><br>
        
        <%= f.radio_button :delivery_address, 2 %>
        <%= f.label :pay_option_transfer, "新しいお届け先" %><br>
      </div>
      
      <div class="row justify-content-center m-3">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>
      <% end %>
  </div>
</div>