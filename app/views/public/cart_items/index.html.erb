<div class="container-fluid">
  <div class="row mt-3">
    <div class="col text-center">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: "カートを空にしますか？" }, class: 'btn btn-outline-danger' %>
      
      <table class="table table-bordered contents-area mt-3">
        <thead class="">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
            
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.image, size: "80x70" %>
                <p><%= cart_item.item.name %></p>
              </td>
              <td class="align-middle">
                <%= cart_item.item.tax_free_price.to_s(:delimited) %>
              </td>
              <td class="align-middle">
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  <%= f.select :count, [1..10], class: "form-control" %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td class="align-middle"><%= cart_item.subtotal.to_s(:delimited) %></td>
              <td class="align-middle">
                <%= link_to "削除する", cart_item_path(cart_item), method: :delete, data: { confirm: "商品を削除しますか？", class: "btn btn-outline-danger" } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </thead>
      </table>
      
      <%= link_to "買い物を続ける", root_path, class: "btn btn-outline-primary m-2 px-3" %>
      <%= link_to "情報入力に進む", new_order_path(buy_quantity: @total_price), class: "btn btn-outline-success" %>
      
    </div>
  </div>
</div>

