<div class="container">
  <div class="row justify-content-center mt-3">
    <h3 class="border-bottom border-gray">
      <%= @customer.first_name %>　<%= @customer.last_name %>さんのマイページ
    </h3>
  </div>

  <div class="row justify-content-center my-2">
    <h4 class="justify-text-center">登録情報</h4>
  </div>


  <div class="row justify-content-center">
    <div class="col-6 offset-1">
      <table class="table table-borderless">
      
        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name %> <%= @customer.last_name %></td>
        <tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.kana_first_name %> <%= @customer.kana_last_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        <tr>
        <tr>  
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row justify-content-center mb-3">
    <font color="red">会員情報変更はこちら：</font>
    <%= link_to edit_customer_path, class:'btn btn-outline-danger' do %>
    <i class="fas fa-user-cog"></i>会員情報編集
    <% end %>
  </div>
  
  <div class="row justify-content-center mb-3">
    <font color="orange">配送先一覧はこちら　：</font>
    <%= link_to shipping_addresses_path, class:'btn btn-outline-warning' do %>
    <i class="fas fa-truck-moving"></i>配送先一覧
    <% end %>
  </div>
  
  <div class="row justify-content-center mb-3">
    <font color="green">注文履歴一覧はこちら：</font>
    <%= link_to orders_path, class:'btn btn-outline-success' do %>
    <i class="fas fa-birthday-cake"></i>注文履歴一覧
    <% end %>
  </div>
</div>
