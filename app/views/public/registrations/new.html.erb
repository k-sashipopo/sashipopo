<div class="container">

  <%= flash[:notice] %>
  <div class="row justify-content-center mt-3">
    <h3 class="border-bottom border-gray">会員登録</h3>
  </div>

<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>

<!--名前を入力する-->

<table>
  <tr>
  <th>氏名</th>
  <td><%= f.text_field :first_name, placeholder:"姓"%> <%= f.text_field :last_name, placeholder:"名" %></td>
  </tr>

  <tr>
  <th>フリガナ</th>
  <td><%= f.text_field :kana_first_name, placeholder:"姓（カタカナ）" %> <%= f.text_field :kana_last_name, placeholder:"名（カタカナ）" %></td>
  </tr>

  <tr>
  <th>メールアドレス</th>
  <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %></td>
  </tr>

  <tr>
  <th>郵便番号</th>
  <td><%= f.text_field :postcode, placeholder:"郵便番号" %></td>
  </tr>
  
  <tr>
  <th>住所</th>
  <td><%= f.text_field :address, placeholder:"住所" %></td>
  </tr>
  
  <tr>
  <th>電話番号（ハイフンなし）</th>
  <td><%= f.text_field :telephone_number, placeholder:"電話番号" %></td>
  </tr>
  
  <tr>
  <th>パスワード(6文字以上)</th>
  <td><%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %></td>
  </tr>
  
  <tr>
  <th>パスワード（確認用）</th>
  <td><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード（確認用）" %></td>
  </tr>

</table>
  <br>

<!--登録ボタン-->
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br>

<%= link_to new_customer_session_path, class:'btn btn-outline-success mb-3' do %>
会員ログインはこちら
<% end %>
</div>
