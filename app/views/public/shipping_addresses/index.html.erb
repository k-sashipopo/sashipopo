<div class="container">
  <div class="row justify-content-center mt-3">
    <%= flash[:notice] %> 
  </div>
  
  <div class="row justify-content-center">
    <h3 class="border-bottom border-gray ml-3">配送先登録<span style="color: #CCCCCC;"> / </span>一覧</h3>
  </div>

  <%= form_with model: @shipping_address_new do |f| %>
  <div class="row my-3 offset-1">
    <div class="col-3">
      <%= f.label "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3 offset-1">
    <div class="col-6">
    <%= f.label "住所" %>
    <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-5 offset-1 align-items-end">
    <div class="col-3">
    <%= f.label "宛名" %>
    <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col ml-3">
    <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>

  <div class="row justify-content-center mb-3">
    <table class="col-10 table table-hover table-bordered contents-area">
      <thead class="thead-light">
        <tr class="text-left">
          <th class="col-1">郵便番号</th>
          <th class="col-3">住所</th>
          <th class="col-1">宛名</th>
          <th class="col-1"></th>
          <th class="col-1"></th>
        </tr>
      </thead>
  
      <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
          <tr>
            <td class="align-middle"><%= shipping_address.postcode %></td>
            <td class="align-middle"><%= shipping_address.address %></td>
            <td class="align-middle"><%= shipping_address.name %></td>
            <td class="align-middle">
              <%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-success ml-2" %>
            </td>
            <td class="align-middle">
              <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, class: "btn btn-danger ml-2", data: { confirm: "本当に削除しますか？"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

