<div class="container">
  <div class="row justify-content-center">
    <%= flash[:notice] %> 
  </div>
  
  <div class="row justify-content-center mt-3">
    <h3 class="border-bottom border-gray">配送先編集</h3>
  </div>
  
  <%= form_with model: @shipping_address do |f| %>
    <div class="row mb-3 offset-1">
      <div class="col-3">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postcode, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-3 offset-1">
      <div class="col-6">
      <%= f.label "住所" %>
      <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-5 offset-1 align-items-end">
      <div class="col-3">
      <%= f.label "宛名" %>
      <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col ml-3">
      <%= f.submit "編集内容を保存", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>