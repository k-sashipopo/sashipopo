<div class="container-fluid">
  <div class="row justify-content-center mt-3">
    <h4 class="border-bottom border-gray">新着商品</h4>
  </div>
    
  <div class="row justify-content-center">
    <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
        <div class="m-3">
        <%= link_to item_path(item) do %>
          <%= image_tag item.image, size: '200x150', class: "mb-2" %><br>
          <p class="text-truncate text-dark"><%= item.name %></p>
          <p class="text-dark">¥<%= (item.tax_free_price*1.1).floor.to_s(:delimited) %>(税込)</p>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="text-right mr-5 mb-3">
    <%= link_to "全ての商品を見る＞＞", items_path, class: "text-dark" %>
  </div>
</div>
